{
  "name": "bikram-sambat-js",
  "version": "2.0.0",
  "description": "Utility library to convert date in AD (Gregorian) to Nepali date BS (Bikram sambat) and vice versa.",
  "keywords": [
    "nepali",
    "bikram sambat",
    "gregorian",
    "calendar",
    "bs",
    "ad"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/puncoz-official/bikram-sambat-js"
  },
  "bugs": {
    "url": "https://github.com/puncoz-official/bikram-sambat-js/issues"
  },
  "homepage": "https://github.com/puncoz-official/bikram-sambat-js",
  "author": {
    "name": "Puncoz Nepal",
    "url": "https://puncoz.com/",
    "email": "info@puncoz.com"
  },
  "engines": {
    "node": ">=18.12.0",
    "npm": "please-use-yarn",
    "yarn": ">=4.5.2"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "module": "./dist/bikram-sambat.es.js",
        "types": "./dist/index.d.ts"
      },
      "require": {
        "module": "./dist/bikram-sambat.umd.js",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "main": "./dist/bikram-sambat.umd.js",
  "module": "./dist/bikram-sambat.es.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "postinstall": "husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --disable",
    "clean": "del dist .rollup.cache debug",
    "clean:fresh": "yarn clean && del node_modules yarn.lock",
    "lint": "eslint --flag unstable_ts_config .",
    "build-tsup": "tsup",
    "build": "yarn clean && rollup --config rollup.config.ts --configPlugin typescript --bundleConfigAsCjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.9.3",
    "del-cli": "^6.0.0",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.0",
    "pinst": "^3.0.0",
    "rollup": "^4.27.4",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "typescript": "~5.6",
    "typescript-eslint": "^8.15.0"
  },
  "packageManager": "yarn@4.5.2"
}
